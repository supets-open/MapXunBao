<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/search_annotation_red"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="1dp"
        android:textColor="@android:color/black"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageview_start1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/star_gold"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imageview_start2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/star_gold"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imageview_start3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/star_gold"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imageview_start4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/star_gold"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imageview_start5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/star_gold"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>